<% layout("layouts/boilerplate") %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <h2 class="mb-4 text-center">Add New Product</h2>

                <form method="post" action="/products" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter product name"
                            required>
                        <div class="invalid-feedback">Product name should be valid</div>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price (â‚¹)</label>
                        <input type="number" name="price" class="form-control" id="price" placeholder="Ex. 1200" min="0"
                            step="0.01" required>
                        <div class="invalid-feedback">Price should be a valid positive number</div>
                    </div>

                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" name="quantity" class="form-control" id="quantity"
                            placeholder="Enter quantity of product" min="0" required>
                        <div class="invalid-feedback">Please enter a valid quantity</div>
                    </div>

                    <div class="mb-4">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" name="category" id="category" aria-label="Default select example"
                            required>
                            <option value="" selected disabled>Choose category of product</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Home Appliances">Home Appliances</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Cloths">Cloths</option>
                            <option value="Groceries">Groceries</option>
                            <option value="General">General</option>
                        </select>
                        <div class="invalid-feedback">Please select a category</div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>